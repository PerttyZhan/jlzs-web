<%  data.forEach(function(b){ %>
	<div class="news-item">
		<div class="news-image">
			<a href="/<%=b.difference%>/article/<%=b.id%>" target="_blank"><img src="<%=b.img_src%>" /></a>
			
		</div>
		<div class="news-des">
			<a class="news-title" href="/article/<%=b.id%>" target="_blank"><%=b.headline%></a>
			<p class="news-smll-title"><%=b.title%></p>

			<div class="news-keys">
				<% b.retag.forEach(function(t){ %>
					<span><%= t.name %></span>
				<% }) %>
			</div>
			
			<div class="news-posts">
				<span><i class="ion-ios-calendar-outline"></i><%=b.created_at%></span>
				<div>
					<span><%=b.creator%> <i class="ion-person"></i></span>
				</div>
			</div>
		</div>
	</div>
<% }) %>

<% if (current_page < last_page) { %>
	<div class="news-loadmore" 
		id="loadMore" 
		data-page="<%=current_page%>"
		data-choice=<%=information%>>
		加载更多
	</div>
<% } %>