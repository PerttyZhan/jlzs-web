<%  data.forEach(function(b){ %>
	<% if (b.difference) { %>
		<div class="news-item">
			<div class="news-image">
				<a href="/<%=b.difference%>/article/<%=b.id%>" title="<%=b.headline%>" target="_blank">
					<img src="<%=b.img_src%>" alt="<%=b.headline%>"/>
				</a>
				
			</div>
			<div class="news-des">
				<a class="news-title" href="/<%=b.difference%>/article/<%=b.id%>" title="<%=b.headline%>" target="_blank"><%=b.headline%></a>
				<p class="news-smll-title"><%=b.title%></p>

				<div class="news-keys">
					<% b.tag.forEach(function(t){ %>
						<span><%= t.name %></span>
					<% }) %>
				</div>
				
				<div class="news-posts">
					<span><i class="ion-ios-clock-outline"></i><%=b.formattimer%></span>
					<div>
						<span><%=b.name%> <i class="ion-person"></i></span>
					</div>
				</div>
			</div>
		</div>
	<% } else { %>
		<div class="news-item">
			<div class="news-image">
				<a href="/activities/article/<%=b.id%>" title="<%=b.headline%>" target="_blank"><img alt="<%=b.headline%>" src="<%=b.cover_image%>" /></a>
				
			</div>
			<div class="news-des">
				<a class="news-title" href="/activities/article/<%=b.id%>" title="<%=b.headline%>" target="_blank"><%=b.title%></a>
				<p class="news-smll-title"><%=b.abstract%></p>

				<div class="news-keys">
					<% b.tag.forEach(function(t){ %>
						<span><%= t.name %></span>
					<% }) %>
				</div>
				
				<div class="news-posts">
					<span><i class="ion-ios-clock-outline"></i><%=b.formattimer%></span>
					<div>
						<span><%=b.name%> <i class="ion-person"></i></span>
					</div>
				</div>
			</div>
		</div>
	<% } %>
<% }) %>

<% if (current_page < last_page) { %>
	<div class="news-loadmore" 
		id="loadMore" 
		data-page="<%=current_page%>">
		加载更多
	</div>
<% } %>